generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum PresenceType {
    ENTER
    EXIT
}

model User {
    id             Int        @id @default(autoincrement())
    name           String
    email          String     @unique
    profil_pic_url String
    position       String
    phone          String
    password       String
    presences      Presence[]
}

model Presence {
    id        Int          @id @default(autoincrement())
    userId    Int
    createdAt DateTime     @default(now())
    type      PresenceType
    user      User         @relation(references: [id], fields: [userId])
}
